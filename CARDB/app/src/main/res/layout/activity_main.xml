<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />


    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout"
        android:layout_height="match_parent">

        <!-- activity view -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/clienti"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.ClientiMenuFragment"
                    tools:layout="@layout/clienti_menu_fragment"
                    android:background="@android:drawable/dialog_holo_light_frame"/>

                <View style="@style/Divider"/>

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.ClientiBodyFragment"
                    tools:layout="@layout/clienti_body_fragment"
                    android:background="@android:drawable/dialog_holo_light_frame"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/veicoli"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.VeicoliMenuFragment"
                    tools:layout="@layout/veicoli_menu_fragment"/>

                <View style="@style/Divider"/>

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.VeicoliBodyFragment"
                    tools:layout="@layout/veicoli_body_fragment"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lavorazioni"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.LavorazioniMenuFragment"
                    tools:layout="@layout/lavorazioni_menu_fragment">
                </fragment>

                <View style="@style/Divider"/>

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.LavorazioniBodyFragment"
                    tools:layout="@layout/lavorazioni_body_fragment">
                </fragment>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pagamenti"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.PagamentiMenuFragment"
                    tools:layout="@layout/pagamenti_menu_fragment">
                </fragment>

                <View style="@style/Divider"/>

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.PagamentiBodyFragment"
                    tools:layout="@layout/pagamenti_body_fragment">
                </fragment>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gestione"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.GestioneMenuFragment"
                    tools:layout="@layout/gestione_menu_fragment">
                </fragment>

                <View style="@style/Divider"/>

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="bd1415.unipd.dei.it.cardb.GestioneBodyFragment"
                    tools:layout="@layout/gestione_body_fragment">
                </fragment>

            </LinearLayout>

            </FrameLayout>

        <!-- navigation drawer -->
        <RelativeLayout
            android:layout_gravity="left|start"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/left_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#eee"
                android:background="#fff"
                android:dividerHeight="1dp" />
        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
